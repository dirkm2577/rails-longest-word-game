<h1>New Game</h1>

<div class="container">
  <div class="row">
    <% @letters.each do |letter| %>
      <div class="col">
        <h2><%= letter %></h2>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <label for="longestWord" class="form-label">What is the longest word you can find?</label>
  <form action="/score" method="post" data-turbo="false" class="input-group input-group-lg">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="form-control" type="text" name="word" value="<%= params[:word] %>">
    <input class="btn btn-primary" type="submit" value='Play'>
  </form>
</div>
